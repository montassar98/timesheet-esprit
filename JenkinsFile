pipeline {
    agent any
    tools {
        maven 'maven3'
    }
    options {
        buildDiscarder logRotator(daysToKeepStr: '5', numToKeepStr: '7')
    }
    stages{
        stage('Build'){
            steps{
                 sh script: 'mvn clean package'
                 archiveArtifacts artifacts: 'target/timesheet.war', onlyIfSuccessful: true
            }
        }
        stage('Upload War To Nexus'){
            steps{
                script{

                    def mavenPom = readMavenPom file: 'pom.xml'
                    def nexusRepoName = mavenPom.version.endsWith("SNAPSHOT") ? "timesheet-snapshot" : "timesheet-release"
                    nexusArtifactUploader artifacts: [
                        [
                            artifactId: 'timesheet',
                            classifier: '',
                            file: "target/simple-app-${mavenPom.version}.war",
                            type: 'war'
                        ]
                    ],
                    credentialsId: 'nexus3',
                    groupId: 'tn.esprit.spring',
                    nexusUrl: 'http://localhost:8081/nexus',
                    nexusVersion: 'nexus3',
                    protocol: 'http',
                    repository: 'http://localhost:8081/nexus/content/repositories/timesheet',
                    version: "${mavenPom.version}"
                    }
            }
        }
        stage('upload War To Docker'){
        }
    }
}